 * 说明：
 *             I2C地址说明：  1   A5   A4  A3  A2  A1  A0  R/W0     A0 - A5 由硬件决定
 *
 */


#ifndef _PCA9685_H_
#define _PCA9685_H_
#include "stm32f1xx_hal.h"

/**************PCA9685寄存器定义*********************/
#define PCA9685_MODE1                           0x00H
#define PCA9685_MODE2                           0x01H
#define PCA9685_SUBADR1                       0x02H
#define PCA9685_SUBADR2                       0x03H
#define PCA9685_SUBADR3                       0x04H
#define PCA9685_ALLCALLADR                 0x05H

#define  PCA9685_LED0_ON_L                    0x06H
#define  PCA9685_LED0_ON_H                   0x07H
#define  PCA9685_LED0_OFF_L                   0x08H
#define  PCA9685_LED0_OFF_H                  0x09H

#define  PCA9685_LED1_ON_L                    0x0AH
#define  PCA9685_LED1_ON_H                   0x0BH
#define  PCA9685_LED1_OFF_L                   0x0CH
#define  PCA9685_LED1_OFF_H                  0x0DH

#define  PCA9685_LED2_ON_L                    0x0EH
#define  PCA9685_LED2_ON_H                   0x0FH
#define  PCA9685_LED2_OFF_L                   0x10H
#define  PCA9685_LED2_OFF_H                  0x11H

#define  PCA9685_LED3_ON_L                    0x12H
#define  PCA9685_LED3_ON_H                   0x13H
#define  PCA9685_LED3_OFF_L                   0x14H
#define  PCA9685_LED3_OFF_H                  0x15H
#endif
